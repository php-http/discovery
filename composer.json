{
    "name": "php-http/discovery",
    "description": "Finds installed adapters and message factories",
    "license": "MIT",
    "keywords": ["http", "discovery", "adapter", "message", "factory"],
    "homepage": "http://php-http.org",
    "authors": [
        {
            "name": "Eric GELOEN",
            "email": "geloen.eric@gmail.com"
        },
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "php-http/message-factory": "^0.1"
    },
    "require-dev": {
        "zendframework/zend-diactoros": "^1.0",
        "guzzlehttp/psr7": "^1.0",
        "phpspec/phpspec": "^2.2",
        "henrikbjorn/phpspec-code-coverage" : "^1.0"
    },
    "suggest": {
        "zendframework/zend-diactoros": "Used with Diactoros MessageFactory",
        "guzzlehttp/psr7": "Used with Guzzle PSR-7 MessageFactory"
    },
    "autoload": {
        "psr-4": {
            "Http\\Discovery\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2-dev"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
